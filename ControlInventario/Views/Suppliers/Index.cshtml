@model IEnumerable<ControlInventario.Models.Supplier>

@{
    ViewBag.Title = "Index";
}

                <p>
                    <a href="@Url.Action("Create","Suppliers")">Nuevo Proveedor</a>
                </p>
                <table class="table table-hover table-condensed">
                    <tr>
                        <th>
                            Código de Proveedor
                        </th>
                        <th>
                            Nombre del Proveedor
                        </th>
                        <th>
                            Correo Electrónico
                        </th>
                        <th>
                            Télefono
                        </th>
                        <th>
                            Dirección
                        </th>
                        <th>Productos</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SupplierCode)
                    </td>
                    <td><a href="@Url.Action("ProductBySupplier","Products", new { supplirId=item.Id})">@item.SupplierName</a></td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id })|
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })

                    </td>
                </tr>
                    }

                </table>


